@model ShoeZilla.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Edit User</h2>
    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />
        
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" />
             <small class="text-muted">Leave as is to keep current password (prototype: plain text displayed).</small>
             <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Role" class="form-label">Role</label>
            <select asp-for="Role" class="form-control">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Salary" class="form-label">Salary</label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01" />
        </div>
        <div class="mb-3">
            <label asp-for="Designation" class="form-label">Designation</label>
            <input asp-for="Designation" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
