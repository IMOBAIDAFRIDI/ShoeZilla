@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5 mb-5" style="max-width: 900px;">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Checkout</h2>
    </div>

    <div class="row">
        <!-- Forms -->
        <div class="col-lg-7">
            
            <div class="mb-5">
                <h5 class="fw-bold mb-3">Does everything look correct?</h5>
                <div class="border p-3 rounded">
                    <span class="text-success">âœ“ Standard Delivery</span>
                </div>
            </div>

            <div class="mb-5">
                <h4 class="fw-bold mb-4">Payment</h4>
                
                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" checked id="billingSame">
                  <label class="form-check-label" for="billingSame">
                    Billing address same as delivery
                  </label>
                </div>

                <div class="mb-3">
                    <input type="text" class="form-control py-3" placeholder="Card Number">
                </div>
                 <div class="row g-3 mb-3">
                     <div class="col-6">
                         <input type="text" class="form-control py-3" placeholder="MM/YY">
                     </div>
                     <div class="col-6">
                         <input type="text" class="form-control py-3" placeholder="CVV">
                     </div>
                 </div>
            </div>
            
            <a asp-action="Confirmation" class="btn btn-dark w-100 rounded-pill py-3 btn-lg">Place Order</a>

        </div>

        <!-- Order Summary (Right) -->
        <div class="col-lg-5 ps-lg-5">
            <h5 class="fw-bold mb-4">In Your Bag</h5>
             <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Subtotal</span>
                <span>$250.00</span>
            </div>
             <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Estimated Shipping</span>
                <span>Free</span>
            </div>
             <div class="d-flex justify-content-between mb-4 fw-bold">
                <span>Total</span>
                <span>$250.00</span>
            </div>
            
            <div class="d-flex gap-3 mb-3">
                 <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=100&q=80" class="img-fluid rounded" style="width: 60px;">
                 <div>
                     <span class="small fw-bold d-block">Nike Air Max 270</span>
                     <span class="text-muted small">Qty 1</span>
                     <span class="text-muted small">$150.00</span>
                 </div>
            </div>
             <div class="d-flex gap-3">
                 <img src="https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?w=100&q=80" class="img-fluid rounded" style="width: 60px;">
                 <div>
                     <span class="small fw-bold d-block">Nike Air Force 1</span>
                     <span class="text-muted small">Qty 1</span>
                     <span class="text-muted small">$100.00</span>
                 </div>
            </div>

        </div>
    </div>
</div>
