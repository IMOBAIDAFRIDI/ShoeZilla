@{
    ViewData["Title"] = "Shipping & Returns";
}

<div class="container mt-5">
    <h1 class="mb-4">Shipping & Returns</h1>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Shipping Policy</h3>
            <p>We offer free standard shipping on all orders over $50. Standard shipping takes 3-5 business days.</p>
            <ul>
                <li>Standard Shipping: $5.99 (Free over $50)</li>
                <li>Express Shipping: $14.99 (1-2 business days)</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Return Policy</h3>
            <p>If you are not completely satisfied with your purchase, you can return it within 30 days of purchase for a full refund or exchange.</p>
            <p>Items must be unworn, in original packaging, and with tags attached.</p>
            <a asp-action="Contact" class="btn btn-outline-dark">Start a Return</a>
        </div>
    </div>
</div>
