@model ShoeZilla.Models.Order
@{
    ViewData["Title"] = "Order Confirmed";
}

<div class="container mt-5 text-center">
    <div class="py-5">
        <h1 class="display-4 text-success mb-3">Thank You!</h1>
        <p class="lead">Your order (#@Model.Id) has been placed successfully.</p>
        <div class="alert alert-info d-inline-block mt-3 px-5">
            <strong>Tracking ID:</strong> @Model.TrackingNumber
        </div>
        <p class="mt-3">Use this ID to track your order status.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-dark mt-4">Continue Shopping</a>
    </div>
</div>
