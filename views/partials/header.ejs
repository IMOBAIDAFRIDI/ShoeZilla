<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= typeof title !== 'undefined' ? title : 'ShoeZilla' %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark-custom mb-0">
            <div class="container-fluid px-5">
                <!-- 1. Logo -->
                <a class="navbar-brand me-5" href="/">
                    ShoeZilla
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-center">
                    <!-- 2. Centered Categories -->
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item"><a class="nav-link px-3" href="/category/Men">MEN</a></li>
                        <li class="nav-item"><a class="nav-link px-3" href="/category/Women">WOMEN</a></li>
                        <li class="nav-item"><a class="nav-link px-3" href="/category/Kids">KIDS</a></li>
                        <li class="nav-item"><a class="nav-link px-3" href="/category/Joggers">JOGGERS</a></li>
                    </ul>

                    <!-- 3. Search & Icons (Right Aligned) -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center gap-3">
                        <li class="nav-item me-2">
                             <form action="/search" method="get" class="d-flex">
                                 <div class="input-group input-group-sm">
                                     <input type="text" name="query" class="form-control bg-dark border-secondary text-white" placeholder="Search..." aria-label="Search" style="width: 150px;">
                                     <button class="btn btn-outline-secondary text-white" type="submit">
                                         <i class="bi bi-search"></i>
                                     </button>
                                 </div>
                             </form>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white position-relative" href="/cart">
                                <i class="bi bi-cart" style="font-size: 1.2rem;"></i>
                                <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        <%= cartCount %>
                                    </span>
                                <% } %>
                            </a>
                        </li>
                        
                        <% if (user) { %>
                            <li class="nav-item">
                                <a class="nav-link text-white small" href="/profile">Hi, <%= user.username %></a>
                            
                            <li class="nav-item">
                                <a class="nav-link text-white small" href="/auth/logout">Logout</a>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link text-white small" href="/auth/login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white small" href="/auth/register">Signup</a>
                            </li>
                        <% } %>

                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin">ADMIN</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
