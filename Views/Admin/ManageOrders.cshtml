@model IEnumerable<ShoeZilla.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container mt-5">
    <h2 class="mb-4">Manage Orders</h2>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Order ID</th>
                <th>Tracking #</th>
                <th>Date</th>
                <th>Customer</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.Id</td>
                    <td><span class="badge bg-light text-dark border">@order.TrackingNumber</span></td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>
                        @order.CustomerName<br>
                        <small class="text-muted">@order.CustomerEmail</small>
                    </td>
                    <td>$@order.TotalAmount</td>
                    <td><span class="badge bg-warning text-dark">@order.Status</span></td>
                    <td>
                        <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@order.Id" />
                            <input type="hidden" name="status" value="Processing" />
                            <button type="submit" class="btn btn-sm btn-success mb-1">Confirm</button>
                        </form>
                        <form asp-action="UpdateOrderStatus" method="post" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@order.Id" />
                            <input type="hidden" name="status" value="Out for Delivery" />
                            <button type="submit" class="btn btn-sm btn-info text-white mb-1">Delivering</button>
                        </form>
                        <form asp-action="UpdateOrderStatus" method="post" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@order.Id" />
                            <input type="hidden" name="status" value="Delivered" />
                            <button type="submit" class="btn btn-sm btn-primary mb-1">Delivered</button>
                        </form>
                        <br/>
                        <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@order.Id" />
                            <input type="hidden" name="status" value="Cancelled" />
                            <button type="submit" class="btn btn-sm btn-warning mb-1">Cancel</button>
                        </form>
                         <form asp-action="DeleteOrder" method="post" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-sm btn-danger mb-1"><i class="bi bi-trash"></i> Delete</button>
                        </form>
                    </td>
                </tr>
                <tr>
                    <td colspan="6" class="bg-light">
                        <small class="fw-bold">Items:</small>
                        <ul class="list-inline mb-0">
                            @foreach(var item in order.OrderItems)
                            {
                                <li class="list-inline-item me-3">â€¢ @item.Product?.Name (Size: @item.Size) x @item.Quantity</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
     <a asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
