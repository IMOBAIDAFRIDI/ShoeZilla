@{
    ViewData["Title"] = "Order Status";
}

<div class="container mt-5">
    <h1 class="display-4 mb-4">Track Your Order</h1>
    <p class="lead">Enter your tracking number below to see the status of your shipment.</p>
    
    <div class="card p-4 shadow-sm" style="max-width: 600px;">
        <form asp-action="OrderStatus" method="get">
            <div class="mb-3">
                <label for="trackingNumber" class="form-label">Tracking Number</label>
                <input type="text" name="trackingNumber" class="form-control" id="trackingNumber" placeholder="e.g. TRK-ABC12345" value="@Context.Request.Query["trackingNumber"]">
            </div>
            <button type="submit" class="btn btn-dark">Track Order</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }

        @if (Model != null)
        {
            var order = Model as ShoeZilla.Models.Order;
            if(order != null)
            {
                <div class="mt-4 pt-3 border-top">
                    <h5 class="text-primary">Order Found</h5>
                    <p><strong>Status:</strong> <span class="badge bg-info text-dark">@order.Status</span></p>
                    <p><strong>Date:</strong> @order.OrderDate.ToShortDateString()</p>
                    <p><strong>Customer:</strong> @order.CustomerName</p>
                    <p><strong>Items:</strong></p>
                    <ul>
                        @foreach(var item in order.OrderItems)
                        {
                            <li>@item.Product.Name (x @item.Quantity)</li>
                        }
                    </ul>
                </div>
            }
        }
    </div>
</div>
