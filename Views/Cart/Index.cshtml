@model List<ShoeZilla.Models.OrderItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <div class="d-flex align-items-center">
                                <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 50px; height: 50px; object-fit: cover; margin-right: 15px;">
                                <span>@item.Product.Name</span>
                            </div>
                        </td>
                        <td class="align-middle">US @item.Size</td>
                        <td class="align-middle">$@item.Price</td>
                        <td class="align-middle">@item.Quantity</td>
                        <td class="align-middle">$@(item.Price * item.Quantity)</td>
                        <td class="align-middle">
                            <a asp-action="RemoveFromCart" asp-route-id="@item.ProductId" asp-route-size="@item.Size" class="btn btn-sm btn-outline-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                    <td colspan="2" class="fw-bold fs-5">$@Model.Sum(i => i.Price * i.Quantity)</td>
                </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-end mt-3">
             <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark me-2">Continue Shopping</a>
            <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary">Proceed to Checkout</a>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3 class="text-muted">Your cart is empty.</h3>
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark mt-3">Start Shopping</a>
        </div>
    }
</div>
